{
  "title": "control c top option c",
  "rules": [
    {
      "description": "copy",
      "manipulators": [
     {
        "type": "basic",
        "from": {
            "key_code": "c",
            "modifiers": {
                "mandatory": [
                    "command"
                ],
                "optional": [
                    "shift"
                ]
            }
        },
        "to": [
               {
                "key_code": "u",
                "modifiers": ["option"]
               }
        ]
      }
      ]
    },

    {"description": "paste",
      "manipulators": [
     {
        "type": "basic",
        "from": {
            "key_code": "v",
            "modifiers": {
                "mandatory": [
                    "command"
                ],
                "optional": [
                    "shift"
                ]
            }
        },
        "to": [
               {
                "key_code": "v",
                "modifiers": ["option"]
               }
        ]
      }
      ]
    }
  ]
}
